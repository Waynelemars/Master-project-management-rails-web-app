<p id="notice"><%= notice %></p>



<div class="jumbotron" style="background: url('http://freeliquidtemplates.com/free-headers-for-websites/header7.jpg')">
	<center>
		<center><font color="white"><h1><img src="http://www.vakilhousing.com/wp-content/uploads/2016/01/Checklist-Icon-PNG-02063.png" alt="Mountain View" style="width:190px;height:170px;">295 To Do List</h1></font></center>
	</center>
</div>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Task</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.status %></td>

        <div class="btn-group">
        <!-- <td><button type="button" class="btn btn-primary btn-xs"><%= link_to 'Show', task, {style: "color: white"}  %></button></td> -->
        <td><button type="button" class="btn btn-info btn-xs"><%= link_to 'Edit', edit_task_path(task), {style: "color: white"} %></button></td>
        <td><button type="button" class="btn btn-danger btn-xs"><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a href="tasks/new" class="btn btn-success btn-ln">Create</a>
