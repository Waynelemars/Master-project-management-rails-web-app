<p id="notice"><%= notice %></p>


<div class="jumbotron" style="background: url('http://freeliquidtemplates.com/free-headers-for-websites/header7.jpg')">
	<center>
		<center><font color="white"><h1>Ideas</h1></font></center>
	</center>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><h1><%= idea.name %><h1></td>
        <td><%= link_to 'Show', idea %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
        <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<a href="ideas/new" class="btn btn-info btn-ln">New</a>
